<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1C1C1C"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_smsoftlab" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#00D9FF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_customDialogContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="안녕\n나는 커스텀 대화상자"
            android:textColor="@color/white"
            android:textSize="30dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="20"
            android:layout_alignRight="@id/tv_customDialogContent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_foreground"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#00D9FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_customDialogYes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="예"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="#1C1C1C"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#00D9FF" />

        <Button
            android:id="@+id/btn_customDialogNo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="아니요"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="#1C1C1C"/>

    </LinearLayout>

</LinearLayout>