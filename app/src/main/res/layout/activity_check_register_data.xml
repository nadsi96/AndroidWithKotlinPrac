<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".CheckRegisterData">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_smsoftlab" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="정보 확인"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_line_gray"
        android:columnCount="2"
        android:rowCount="13">

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="ID"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="ID"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="PW"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_pw"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="pw"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="성별"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="남자|여자"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="생년월일"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="1996-06-02"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="비상연락용 이메일"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="email@email.com"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_marginVertical="5dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:width="0dp"
            android:gravity="center_vertical"
            android:text="휴대전화번호"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_height="50dp"
            android:layout_columnWeight="2"
            android:layout_marginRight="10dp"
            android:width="0dp"
            android:gravity="center"
            android:text="01012345678"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </GridLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#257CC1"
        android:padding="10dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="24dp" />

</LinearLayout>